@model wine_app.Domain.Result<wine_app.Models.Country.EditableCountryViewModel>
@{
    var model = Model.Data;
    @Html.HiddenFor(x => x.Data.Id);
    var buttonText = Model.IsSuccess ? "Back to list" : "Cancel";
}

@if (!string.IsNullOrWhiteSpace(@Model.Error))
{
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <div class="alert alert-danger">
                <strong>@Model.Error</strong>
            </div>
        </div>
    </div>
}

@if (@Model.IsSuccess)
{
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <div class="alert alert-success">
                <strong>Save successful</strong>
            </div>
        </div>
    </div>
}

<div class="form-group">
    @Html.LabelFor(model => model.Data.Name, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        <input asp-for="@Model.Data.Name" class="form-control" />
        <span asp-validation-for="@Model.Data.Name" class="text-danger"></span>
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(model => model.Data.Note, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        <input asp-for="@Model.Data.Note" class="form-control" />
        <span asp-validation-for="@Model.Data.Note" class="text-danger"></span>
    </div>
</div>

<div class="form-group">
    <div class="col-md-offset-2 col-md-10">
        <input type="submit" value="Save" class="btn btn-success" />
        <a class="btn btn-secondary" asp-controller="Country" asp-action="List">@buttonText</a>
    </div>
</div>