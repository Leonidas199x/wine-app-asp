@model wine_app.Domain.Result<wine_app.Models.Grape.EditableGrapeViewModel>
@{
    var model = Model.Data;
    @Html.HiddenFor(x => x.Data.Id);
    var buttonText = Model.IsSuccess ? "Back to list" : "Cancel";
}

@if (!string.IsNullOrWhiteSpace(@Model.Error))
{
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <div class="alert alert-danger">
                <strong>@Model.Error</strong>
            </div>
        </div>
    </div>
}

@if (@Model.IsSuccess)
{
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <div class="alert alert-success">
                <strong>Save successful</strong>
            </div>
        </div>
    </div>
}

<div class="form-group">
    <label asp-for="@Model.Data.Name" class="control-label col-md-2"></label>
    <div class="col-md-10">
        <input asp-for="@Model.Data.Name" class="form-control" />
        <span asp-validation-for="@Model.Data.Name" class="text-danger"></span>
    </div>
</div>

<div class="form-group">
    <label asp-for="@Model.Data.GrapeColours" class="control-label col-md-2"></label>
    <div class="col-md-10">
        <select asp-for="@Model.Data.GrapeColourId" asp-items="@Model.Data.GrapeColours" class="form-control"></select>
        <span asp-validation-for="@Model.Data.GrapeColours" class="text-danger"></span>
    </div>
</div>

<div class="form-group">
    <label asp-for="@Model.Data.Note" class="control-label col-md-2"></label>
    <div class="col-md-10">
        <textarea asp-for="@Model.Data.Note" class="form-control"></textarea>
        <span asp-validation-for="@Model.Data.Note" class="text-danger"></span>
    </div>
</div>

<div class="form-group">
    <div class="col-md-offset-2 col-md-10">
        <input type="submit" value="Save" class="btn btn-success" />
        <a class="btn btn-secondary" asp-controller="Grape" asp-action="ListGrapes">@buttonText</a>
    </div>
</div>